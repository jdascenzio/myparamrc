[user]
	name = Julien D'Ascenzio
	email = jdascenzio@paratronic.fr
[color]
	ui = auto
[alias]
	logoRef = log --pretty=oneline --abbrev-commit --graph --decorate --all --simplify-by-decoration
	logo = log --pretty=oneline --abbrev-commit --graph --decorate --all
[core]
	editor = vim
[merge]
	tool = kdiff3
[mergetool "diffconflicts"]
	cmd = diffconflicts vimdiff $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
[diff]
	tool = vimdiff
	guitool = kdiff3
[difftool]
	prompt = false
[push]
	default = current
[pull]
	rebase = true
